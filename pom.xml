<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jvnet.hudson.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>1.343</version><!-- which version of Hudson is this plugin built against? -->
    <relativePath>../pom.xml</relativePath>
  </parent>

  <groupId>org.jvnet.hudson.plugins</groupId>
  <artifactId>deploy-websphere</artifactId>
  <url>http://wiki.hudson-ci.org/display/HUDSON/Deploy+WebSphere+Plugin</url>  
  <version>1.0</version>
  <packaging>hpi</packaging>
  <name>Deploy to Websphere container Plugin</name>
  <developers>
    <developer>
      <id>asanso</id>
      <name>Antonio Sanso</name>
    </developer>
  </developers>
  
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <allowTimestampedSnapshots>true</allowTimestampedSnapshots>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
  
  <dependencies>
  
  	<dependency>
  		<groupId>org.jvnet.hudson.plugins</groupId>
  		<artifactId>deploy</artifactId>
  		<version>1.5</version>
	</dependency>
  
  	<dependency>         
  		<groupId>com.ibm.ws.webservices.thinclient_6.1.0</groupId>
  		<artifactId>com.ibm.ws.webservices.thinclient_6.1.0</artifactId>
  	  	<version>1.0</version>
  	  	<scope>system</scope>  	  	   
    	<systemPath>${basedir}/was/com.ibm.ws.webservices.thinclient_6.1.0.jar</systemPath>
	</dependency>
	
		<dependency>         
  	<groupId>com.ibm.ws.admin.client_6.1.0</groupId>
  	<artifactId>com.ibm.ws.admin.client_6.1.0</artifactId>
  	  	<version>1.0</version>
  	  	<scope>system</scope>  	  	   
    	<systemPath>${basedir}/was/com.ibm.ws.admin.client_6.1.0.jar</systemPath>
	</dependency>  
  </dependencies>

  <!-- get every artifact through maven.glassfish.org, which proxies all the artifacts that we need -->
  <repositories>
    <repository>
      <id>m.g.o-public</id>
      <url>http://maven.glassfish.org/content/groups/public/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>m.g.o-public</id>
      <url>http://maven.glassfish.org/content/groups/public/</url>
    </pluginRepository>
  </pluginRepositories>

  <scm>
    <connection>scm:svn:https://guest@svn.dev.java.net/svn/hudson/tags/deploy-websphere-1.0</connection>
    <developerConnection>scm:svn:https://svn.dev.java.net/svn/hudson/tags/deploy-websphere-1.0</developerConnection>
    <url>https://hudson.dev.java.net/source/browse/hudson/tags/deploy-websphere-1.0</url>
  </scm>
</project>
